# Kledo API Authentication
# Option 1: API Key (RECOMMENDED for security)
# Generate API key from Kledo dashboard: Settings > API > Create API Key
KLEDO_API_KEY=kledo_pat_your_api_key_here

# Option 2: Email/Password (LEGACY - not recommended)
# Use only if API key is not available
# KLEDO_EMAIL=your-email@example.com
# KLEDO_PASSWORD=your-password
# KLEDO_APP_CLIENT=android

# API Configuration
KLEDO_BASE_URL=https://api.kledo.com/api/v1

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=1800  # 30 minutes in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/kledo-mcp.log

# MCP Server Configuration
MCP_SERVER_NAME=kledo-crm
MCP_SERVER_VERSION=1.0.0
